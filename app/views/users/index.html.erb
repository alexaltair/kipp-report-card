<% if current_user.type == 'Teacher' %>
  <table class="footable" data-filter="#filter" data-page-size="5">
    <thead>
      <tr>
        <th data-toggle="true">
          Last Name
        </th>
        <th>
          First Name
        </th>
        <th data-hide="phone,tablet" data-name="Student ID" >
          Student ID
        </th>
        <th data-hide="phone,tablet" data-sort-ignore="true">
          Grade Level
        </th>
        <th data-hide="phone" data-sort-ignore="true">
          Report Card
        </th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= student.last_name %></td>
        <td><%= student.first_name %></td>
        <td>Student ID</td>
        <td><%= student.grade_level %></td>
        <% if completed_report_card?(student) %>
          <td><%= link_to "VIEW DATA", user_ratings_path(student) %></td>
        <% else %>
          <td><%= link_to "Grade Student", user_categories_path(student) %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>


<% else %>
  <h1>You're a student!</h1>
<% end %>
