<!-- -------- RATINGS PAGE FOR INDIVIDUAL STUDENT ONLY ---------- -->
<div class="student-dashboard col-md-12">
<% if current_user.type == "Teacher" %>
  <!-- --------------------------------TEACHER VIEW------------------------------------- -->
  <h1>Character Strength Averages for <%= @student.first_name %> <%= @student.last_name %></h1>

  <h2>Combined Teacher/Student</h2>
  <% @categories.each do |category| %>
  <ul>
    <li><%= category.content %> Combined Average Rating: <%= category_average_student(category) %></li>
  </ul>
  <% end %>
  <h2>Combined Teachers</h2>
  <% @categories.each do |category| %>
  <ul>
    <li><%= category.content %> Teachers Average Rating: <%= category_average_student(category, "Teacher") %></li>
  </ul>
  <% end %>

  <h2>Student's Self Assessment</h2>
  <% @categories.each do |category| %>
  <ul>
    <li>My <%= category.content %> Ratings: <%= category_average_student(category, "Student") %></li>
  </ul>
  <% end %>

<% else %>
  <!-- --------------------------------STUDENT VIEW------------------------------------- -->
  <h1>My Character Strength Averages</h1>

  <div class="col-md-6">
    <h3>Report Card Overview</h3>
    <ul>
      <li>Academic Quarter: <%= @current_quarter %></li>
      <li>Total Graders: <%= @total_raters %></li>
      <li>Student Name: <%= @student.first_name %> <%= @student.last_name %></li>
    </ul>
  </div>
  <div class="col-md-6">
    <h3>Cummulative Grade Point</h3>
    <h1><%= @cumulative_average %></h1>
  </div>

  <hr class="col-md-12">



  <h2>Combined Teacher/Student</h2>
  <% @categories.each do |category| %>
  <ul>
    <li><%= category.content %> Combined Average Rating: <%= category_average_student(category) %></li>
  </ul>
  <% end %>

  <h2>Combined Teachers</h2>
  <% @categories.each do |category| %>
  <ul>
    <li><%= category.content %> Teachers Average Rating: <%= category_average_student(category, "Teacher") %></li>
  </ul>
  <% end %>

  <h2>My Ratings</h2>
  <% @categories.each do |category| %>
  <ul>
    <li>My <%= category.content %> Ratings: <%= category_average_student(category, "Student") %></li>
  </ul>
  <% end %>

<% end %>
</div>



