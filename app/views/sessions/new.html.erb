<% provide(:title, 'Sign in') %>
<div class="sign-in">Sign in</div>
<div class="col-md-6 col-md-offset-3">
<h1>Sign in</h1>
  <%= form_for(:session, url: sessions_path) do |f| %>
  <div class="form-group">
    <div><%= f.text_field :email, placeholder: "Email Address", class:"form-control" %></div>
  </div>
  <div class="form-group">
    <div><%= f.password_field :password, placeholder: "Password", class:"form-control"  %></div>
  </div>
  <%= f.submit "Sign in", class: "button signup-button" %>
  <% end %>

  <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
</div>

